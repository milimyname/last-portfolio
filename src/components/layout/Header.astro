---
const {title} = Astro.props;
import { Icon } from 'astro-icon'
// Find post by title
const posts = await Astro.glob('../../pages/blog/diaries/*.mdx');
const post = posts.filter(post=> post.frontmatter.title === title)[0];

// Date and Reading Time
const date = new Date(post.frontmatter.date);
const readingTime = post.frontmatter.minutesRead;

---

<header class="hidden md:flex md:flex-col md:gap-4 w-max h-full sticky top-10 ">
    <!-- Go back to blog -->
<a href="/blog" class=" active:bg-transparent active:outline-none">
        <Icon name="ion:arrow-back-outline" size={24} class="text-gray-600 cursor-pointer " />
    </a>
    <p class="meta flex flex-col text-gray-600 text-sm">
        <time datetime={date.toISOString()}>{date.toDateString()}</time>
        <span>{readingTime}</span>
    </p>
</header>